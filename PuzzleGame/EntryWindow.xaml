<Window x:Class="PuzzleGame.EntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PuzzleGame"
        mc:Ignorable="d"
        Title="EntryWindow" Height="300" Width="300">
    <Grid>
        <Canvas Margin="8,140,228,109">
            <TextBlock>
            Username
            </TextBlock>
        </Canvas>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <ListBox Name="lbScoreboard" Height="91" Width="163">

            </ListBox>
            <TextBox Name="txtUsername"></TextBox>
            <Button Name="btnEasy" Click="BtnEasy_OnClick">Easy</Button>
            <Button Name="btnMedium">Medium</Button>
            <Button Name="btnHard">Hard</Button>
        </StackPanel>
    </Grid>
</Window>
